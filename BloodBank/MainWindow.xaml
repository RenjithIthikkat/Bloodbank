<Window x:Class="BloodBank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodBank"
        mc:Ignorable="d"
        Title="Blood Bank" Height="650" Width="1000">
    <StackPanel Margin="20">
        <Label Content="Blood Bank" Foreground="White" Background="Blue" FontSize="50" HorizontalAlignment="Center" Width="954" Margin="0,0,-0.4,0" />
        <TextBlock Text="Welcome Back" Foreground="Blue" Height="60" FontSize="35" Width="240" Margin="0,20,-0.4,0">
        </TextBlock>

        <Label Content="Username" FontSize="25" Margin="164,50,189.6,0" Height="45"/>

        <TextBox x:Name="txtUsername"  FontSize="18" Height="45" Width="600" Margin="155,10,180.6,0" />


        <Label Content="Password" FontSize="25" Height="45" Margin="164,30,189.6,0" />
        <TextBox x:Name="txtPassword" FontSize="18" Height="45" Margin="164,10,189.6,0" />


        <Button x:Name="btnSubmit" Background="LightSkyBlue" Click ="LoginBtn_Click" Content="Login" FontSize="25" Height="45" Width="250" Margin="351,30,351,0" />
    </StackPanel>
</Window>
